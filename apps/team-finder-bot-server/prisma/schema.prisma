datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  createdAt DateTime @default(now())
  game      Game?    @relation(fields: [gameId], references: [id])
  gameId    String?
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model Game {
  createdAt           DateTime             @default(now())
  genre               String?
  id                  String               @id @default(cuid())
  matchmakingRequests MatchmakingRequest[]
  platform            String?
  teams               Team[]
  title               String?
  updatedAt           DateTime             @updatedAt
}

model MatchmakingRequest {
  createdAt        DateTime  @default(now())
  game             Game?     @relation(fields: [gameId], references: [id])
  gameId           String?
  gameLookup       String?
  id               String    @id @default(cuid())
  requestCreatedAt DateTime?
  requestStatus    String?
  status           String?
  updatedAt        DateTime  @updatedAt
  user             User?     @relation(fields: [userId], references: [id])
  userId           String?
  userLookup       String?
}

model User {
  createdAt           DateTime             @default(now())
  email               String?              @unique
  firstName           String?
  id                  String               @id @default(cuid())
  lastName            String?
  matchmakingRequests MatchmakingRequest[]
  password            String
  roles               Json
  updatedAt           DateTime             @updatedAt
  userEmail           String?
  userFirstName       String?
  userLastName        String?
  userPassword        String?
  userUsername        String?
  username            String               @unique
}
